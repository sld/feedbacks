<%= form_for feedback_form, :url => feedback_send_path, :remote => true do |f| %>
  <%= f.label :topic %>
  <%= f.text_field :topic, :class => "text ui-widget-content ui-corner-all" %>
  <br />
  <%= f.label :text, :class => 'required' %>
  <%= f.text_area :text, :size => '20x10', :class => "text ui-widget-content ui-corner-all" %>
  <br />
  <%= f.label :email, :class => 'required' %>
  <%= f.text_field :email, :class => "text ui-widget-content ui-corner-all" %>
  <%= f.hidden_field :url, :class => "text ui-widget-content ui-corner-all" %>
<% end %>

<% # Set document.url in the form's url because request.url returns feedback_send_path %>
<% # but we need the url which placed in a address bar %>
<script>
  $(function() {
    $("#feedback_url").val(document.URL);
  });
</script>